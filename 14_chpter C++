# 프랜드 클래스(Friend Class)
- 디버깅 용도로 활용

#include <iostream>
using namespace std;
class A{
	int age;
public:
	A(int age) :age(age) {}
	int getAge() { return age; }
};
void peekAge(A& ra) { cout << ra.getAge() << endl; }
int main() {
	A& ra = *new A(19);
	cout << ra.getAge() << endl;
	peekAge(ra);
}
