#include <iostream>
#include <math.h>

using namespace std;

int main() {
    
    cout<< 3+4 << endl;
    cout<< 3-4 << endl;
    cout<< 3*4 << endl;
    cout<< 3/4 << endl;
    cout<< 3.0/4 << endl;
    cout<< 3%4 << endl;
    cout<< pow(3,4) << endl;
}
-----------------------------------------------------------------------------------------
- 우선순위로 인해 ()를 해줘야한다.
#include <iostream>
#include <math.h>

using namespace std;

int main() {
    
    cout<< (3>4) << endl;
    cout<< (3>=4) << endl;
    cout<< (3<4) << endl;
    cout<< (3<=4) << endl;
    cout<< (3==4) << endl;
    cout<< (3!=4) << endl;
    
}
----------------------------------------------------------------------------------------
#include <iostream>
#include <math.h>

using namespace std;

int main() {
    
    cout<< (3>4 && 5>6) << endl;
    cout<< (3<4 && 5<6) << endl;
    cout<< (3>4 || 5>6) << endl;
    cout<< (3<4 || 5<6) << endl;
    cout<< (!(3<4)) << endl;
    cout<< (!(3>4)) << endl;
    
}
