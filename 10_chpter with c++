# 분할 컴파일

ex_main)
#include <stdio.h>
extern int i;
//int i = 3;
int g();
int main() {
	printf("%d", g());
}

ex_b)
static int i = 3;

static int f() {
	return i;
}

int g() {
	return f();
}
