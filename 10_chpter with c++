    const char *eggs[] = {"egg0", "egg1", "egg2", "egg3", };
    cout << eggs[0] <<endl;
    cout << eggs[1] <<endl;
    cout << eggs[2] <<endl;
    cout << eggs[3] <<endl;
    eggs[2] = "egg7";
    cout << eggs[2] << endl;
    
}
